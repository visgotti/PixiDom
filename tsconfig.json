{
  "compilerOptions": {
    "outDir": "./lib",
    "rootDir": "./src",
    "baseUrl": ".",
    "module": "commonjs",
    "lib": ["dom", "es2017"],
    "target": "es2015",
    "declarationMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "types": [ "mocha", "pixi.js"],
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    "bin",
    "lib"
  ]
}